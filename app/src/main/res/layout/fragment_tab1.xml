<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.Tab1Fragment">

   <androidx.core.widget.NestedScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:fillViewport="true">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:layout_margin="10dp"
           android:orientation="vertical">
           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Joint Inspection Report"
               android:textStyle="bold"
               android:padding="10dp"
               android:textColor="@color/design_default_color_primary_dark"
               />
           <View
               android:layout_width="match_parent"
               android:layout_height="1dp"
               android:paddingBottom="10dp"
               android:background="@color/design_default_color_primary_dark"/>
           <Spinner
               style="@style/Widget.AppCompat.Spinner.DropDown"
               android:id="@+id/option_circle"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:dropDownWidth="match_parent" />
           <Spinner
               style="@style/Widget.AppCompat.Spinner.DropDown"
               android:id="@+id/option_division"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:dropDownWidth="match_parent" />
           <Spinner
               style="@style/Widget.AppCompat.Spinner.DropDown"
               android:id="@+id/option_subdivision"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:dropDownWidth="match_parent" />
           <Spinner
               style="@style/Widget.AppCompat.Spinner.DropDown"
               android:id="@+id/option_section"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:dropDownWidth="match_parent" />
           <com.google.android.material.textfield.TextInputLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <com.google.android.material.textfield.TextInputEditText
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:hint="Place"/>
           </com.google.android.material.textfield.TextInputLayout>
           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Date of birth"
               android:padding="10dp"/>
           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="DTR details"
               android:textStyle="bold"
               android:padding="10dp"
               android:textColor="@color/design_default_color_primary_dark"
               />
           <View
               android:layout_width="match_parent"
               android:layout_height="1dp"
               android:paddingBottom="10dp"
               android:background="@color/design_default_color_primary_dark"/>
           <com.google.android.material.textfield.TextInputLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <com.google.android.material.textfield.TextInputEditText
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:hint="Capacity"/>
           </com.google.android.material.textfield.TextInputLayout>
           <com.google.android.material.textfield.TextInputLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <Spinner
                   style="@style/Widget.AppCompat.Spinner.DropDown"
                   android:id="@+id/sp_year_man"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:dropDownWidth="match_parent" />
           </com.google.android.material.textfield.TextInputLayout>
           <com.google.android.material.textfield.TextInputLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <com.google.android.material.textfield.TextInputEditText
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:hint="Make"/>
           </com.google.android.material.textfield.TextInputLayout>
           <com.google.android.material.textfield.TextInputLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <com.google.android.material.textfield.TextInputEditText
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:hint="Oil Capacity( in Ltr.)"/>
           </com.google.android.material.textfield.TextInputLayout>
           <com.google.android.material.textfield.TextInputLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <com.google.android.material.textfield.TextInputEditText
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:hint="Oil Found (in Ltr.)"/>
           </com.google.android.material.textfield.TextInputLayout>
           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="DTR body found"
               android:textColor="@color/design_default_color_primary"/>
           <RadioGroup
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal">
               <RadioButton
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="OK"/>
               <RadioButton
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="NOT"/>
           </RadioGroup>
           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="HT Stud"
               android:textColor="@color/design_default_color_primary"/>
           <RadioGroup
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal">
               <RadioButton
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="OK"/>
               <RadioButton
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Def."/>
               <RadioButton
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Missing"/>
           </RadioGroup>
           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="LT Stud"
               android:textColor="@color/design_default_color_primary"/>
           <RadioGroup
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal">
               <RadioButton
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="OK"/>
               <RadioButton
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Def."/>
               <RadioButton
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Missing"/>
           </RadioGroup>
           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="HT Bushing"
               android:textColor="@color/design_default_color_primary"/>
           <RadioGroup
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal">
               <RadioButton
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="OK"/>
               <RadioButton
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Def."/>
               <RadioButton
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Missing"/>
           </RadioGroup>
           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="LT Bushing"
               android:textColor="@color/design_default_color_primary"/>
           <RadioGroup
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal">
               <RadioButton
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="OK"/>
               <RadioButton
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Def."/>
               <RadioButton
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Missing"/>
           </RadioGroup>
           <com.google.android.material.textfield.TextInputLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <com.google.android.material.textfield.TextInputEditText
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:hint="Remarks.."
                   android:maxLines="3"/>
           </com.google.android.material.textfield.TextInputLayout>
           <Button
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Next->"/>
       </LinearLayout>
   </androidx.core.widget.NestedScrollView>


</FrameLayout>